{
  "name": "@slayzone/app",
  "version": "0.1.37",
  "private": true,
  "repository": "github:debuglebowski/SlayZone",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json",
    "test:e2e": "npx playwright test --config playwright.config.ts",
    "test:e2e:headed": "npx playwright test --config playwright.config.ts --headed",
    "test:e2e:loop": "bash e2e-loop.sh",
    "test:e2e:loop:stop": "bash e2e-loop.sh --stop-on-fail"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@slayzone/ai-config": "workspace:*",
    "@slayzone/diagnostics": "workspace:*",
    "@slayzone/file-editor": "workspace:*",
    "@slayzone/integrations": "workspace:*",
    "@slayzone/onboarding": "workspace:*",
    "@slayzone/projects": "workspace:*",
    "@slayzone/settings": "workspace:*",
    "@slayzone/tags": "workspace:*",
    "@slayzone/task": "workspace:*",
    "@slayzone/task-terminals": "workspace:*",
    "@slayzone/tasks": "workspace:*",
    "@slayzone/telemetry": "workspace:*",
    "@slayzone/terminal": "workspace:*",
    "@slayzone/types": "workspace:*",
    "@slayzone/ui": "workspace:*",
    "@slayzone/worktrees": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "framer-motion": "^12.15.0",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hotkeys-hook": "^5.2.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",

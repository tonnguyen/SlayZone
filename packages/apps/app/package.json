    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.7",
    "electron-builder": "~25.1.8",
    "electron-vite": "^5.0.0",
    "shell-path": "^3.0.0",
